<p id="notice"><%= notice %></p>

<h1>Listing Results</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Is true</th>
      <th>Bet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.title %></td>
        <td><%= result.description %></td>
        <td><%= result.is_correct %></td>
        <td><%= result.bet.title %></td>
        <td><%= link_to 'Show', bet_result_path(@bet, result) %></td>
        <td><%= link_to 'Edit', edit_bet_result_path(@bet, result) %></td>
        <td>
            <%= link_to 'Destroy', bet_result_path(@bet, result),
                        method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Result', new_bet_result_path(@bet) %>
